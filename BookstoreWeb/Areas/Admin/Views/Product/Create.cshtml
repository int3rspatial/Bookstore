@model Product

<div class="card shadow border-dark border-1 mt-4">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating col-12">
                    <input asp-for="Title" class="form-control" placeholder="Type here" />
                    <label asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Type here"></textarea>
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="ISBN" class="form-control" placeholder="Type here" />
                    <label asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="Author" class="form-control" placeholder="Type here" />
                    <label asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="ListPrice" class="form-control" placeholder="Type here" />
                    <label asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="Price" class="form-control" placeholder="Type here" />
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="Price50" class="form-control" placeholder="Type here" />
                    <label asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-12">
                    <input asp-for="Price100" class="form-control" placeholder="Type here" />
                    <label asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}